/* Number Pyramid

        1
       123
      12345
     1234567
    123456789
   ...........
*/


#include <iostream>
using namespace std;
int main() {
    
    int n;

    cout<<"Enter the number of rows:";
    cin>>n;
    int i,j,k,c,count=1;

    for(i=1;i<=n;i++){  //for changing rows
        
        for(k=n-i;k>=1;k--){   //for creating spaces before each row
                cout<<" ";
            }    

            for(j=1;j<=(2*i-1);j++){ //for writing 1234.. in columns
                cout<<count;
                count++; 
                }
    cout<<endl;
    count=1;
    
   }

    return 0;
}   
